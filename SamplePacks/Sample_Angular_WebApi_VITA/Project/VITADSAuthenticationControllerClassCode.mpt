			OpContext.ValidateTrue(!string.IsNullOrEmpty(loginDto.Password), ClientFaultCodes.ValueMissing, "Password", null, "Password may not be empty");
			OpContext.ThrowValidation();
			
			//Login using LoginService
			var loginResult = _loginService.Login(loginDto.UserName, loginDto.Password);
			if(!loginResult.Success)%%><%%=Solution.INDENT%%><%%-
				return new LoginResponseDto() { ResultCode = "LoginFailed" };%%><%%=Solution.OUTDENT%%><%%-
			//If account is suspended (ex: after 3 unsuccessful logins system suspends account for 10 minutes)
			if (loginResult.Flags.IsSet(LoginFlags.Suspended))%%><%%=Solution.INDENT%%><%%-
				return new LoginResponseDto() { ResultCode = "LoginSuspended" };%%><%%=Solution.OUTDENT%%><%%-
			OpContext.User = loginResult.User; 
			_sessionService.StartSession(OpContext);
			var userSession = OpContext.UserSession;
			var resp = new LoginResponseDto() {ResultCode = "Success", AuthenticationToken = userSession.Token };
			// Check login flags and let client know that there are extras to be completed
			// The client app (like AngularJS app) can redirect to appropriate screen.
			if(loginResult.Flags.IsSet(LoginFlags.ForceChangePassword))%%><%%=Solution.INDENT%%><%%-
				resp.RequestedActions.Add("ForceChangePassword");%%><%%=Solution.OUTDENT%%><%%-
			if(!loginResult.Flags.IsSet(LoginFlags.EmailVerified))%%><%%=Solution.INDENT%%><%%-
				resp.RequestedActions.Add("VerifyEmail");%%><%%=Solution.OUTDENT%%><%%-
			if(!loginResult.Flags.IsSet(LoginFlags.SecretQuestionsCreated))%%><%%=Solution.INDENT%%><%%-
				resp.RequestedActions.Add("SetupSecretQuestions");%%><%%=Solution.OUTDENT%%><%%-
			return resp;%%>
